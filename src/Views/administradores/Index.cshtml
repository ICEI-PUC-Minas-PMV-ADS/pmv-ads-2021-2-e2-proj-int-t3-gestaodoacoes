@model IEnumerable<WebApplication2.Models.Administrador>

@{
    ViewData["Title"] = "Index";
}

<h1>Todos os Administradores</h1>

<p>
    <a asp-action="Create">Adicionar Administrador</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CPF)
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CPF)
            </td>

            <td>
                <a asp-action="Edit" asp-route-id="@item.CPF">Editar Perfil</a> |
                <a asp-action="Delete" asp-route-id="@item.CPF">Deletar</a>
            </td>
        </tr>
}
    </tbody>
</table>

