@model doee.Models.Instituicao

@{
    ViewData["Title"] = "Details";
}

<h1>Detalhes</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.setor)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.setor)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Descricao)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Descricao)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.MetaArrecadacao)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MetaArrecadacao)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DataRegistro)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DataRegistro)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Doacoes)
        </dt>
        <dd class="col-sm-10">
            <table class="table">
                <tr>
                    <th>Data Transação</th>
                    <th>Nome Doador</th>
                    <th>Valor</th>
                </tr>
                @foreach (var item in Model.Doacoes)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Data)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.NomeDoador)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Valor)
                        </td>
                    </tr>
                }
            </table>
        </dd>
    </dl>
</div>
<div>
    @if (User.IsInRole("Ong")) {<a asp-action="Edit" asp-route-id="@Model.CNPJ">Editar</a> }
        
</div>
